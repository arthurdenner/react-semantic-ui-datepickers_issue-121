{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["**/*.spec.ts", "node_modules", "vendor", "public", "bundle"],
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "compileOnSave": false
}
